<div class="wrap">
  <div class="title" id="title">Countdown to Meeting You ðŸ’›</div>
  <div class="sub" id="dateText">Target: 27 Nov 2025, 00:00</div>

  <div class="countdown">
    <div class="unit"><div class="num" id="days">--</div><div class="label">days</div></div>
    <div class="unit"><div class="num" id="hours">--</div><div class="label">hours</div></div>
    <div class="unit"><div class="num" id="minutes">--</div><div class="label">minutes</div></div>
    <div class="unit"><div class="num" id="seconds">--</div><div class="label">seconds</div></div>
  </div>

  <div class="caption">we're getting closer every second âœ¨</div>
</div>

<script>
const targetDate = new Date("2025-11-27T00:00:00");

const dEl = document.getElementById("days");
const hEl = document.getElementById("hours");
const mEl = document.getElementById("minutes");
const sEl = document.getElementById("seconds");
const confetti = document.getElementById("confetti");
const sky = document.getElementById("sky");

// Floating stars
for(let i=0;i<60;i++){
  const s=document.createElement("div");
  s.className="star";
  s.style.left=Math.random()*100+"vw";
  s.style.top=(100+Math.random()*50)+"vh";
  s.style.setProperty("--dur",12+Math.random()*18+"s");
  s.style.setProperty("--dx",(Math.random()*80-40)+"vw");
  sky.appendChild(s);
}

function update(){
  const now = new Date();
  const diff = Math.max(0, targetDate - now);
  const s = Math.floor(diff/1000);
  const d = Math.floor(s / (3600*24));
  const h = Math.floor((s % (3600*24)) / 3600);
  const m = Math.floor((s % 3600) / 60);
  const ss = s % 60;

  dEl.textContent = d;
  hEl.textContent = String(h).padStart(2,"0");
  mEl.textContent = String(m).padStart(2,"0");
  sEl.textContent = String(ss).padStart(2,"0");

  if(diff<=0 && !update.done){
    burst();
    update.done=true;
  }
  requestAnimationFrame(update);
}

function burst(){
  confetti.innerHTML="";
  confetti.style.display="block";
  const colors=["#ffd6a5","#fecdd3","#c7d2fe","#bffae2","#fef3c7","#e9d5ff"];
  for(let i=0;i<80;i++){
    const p=document.createElement("div");
    p.className="piece";
    p.style.setProperty("--x",(Math.random()*100)+"%");
    p.style.setProperty("--c",colors[Math.floor(Math.random()*colors.length)]);
    confetti.appendChild(p);
  }
  setTimeout(()=>confetti.style.display="none",2000);
}

update();
</script>
